{
  "Serilog": {
    "MinimalLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AVAccount": "User ID=admin;Password=PaSSW0rd123!;Host=postgres;Port=5432;Database=AVAccount;",
    "AVIdentityServer": "User ID=admin;Password=PaSSW0rd123!;Host=postgres;Port=5432;Database=AVIdentityServer;"
  },
  "RabbitMQ": {
    "Uri": "amqp://admin:PaSSW0rd123!@rabbitmq:5672/",
    "HostName": "rabbitmq",
    "VirtualHost": "/",
    "Port": 5672,
    "UserName": "admin",
    "Password": "PaSSW0rd123!"
  },
  "AdminUIClientOptions": {
    "Origin": "http://localhost:4200",
    "EmailConfirmationUrl": "http://localhost:4200/account/email-confirmation"
  },
  "IdentityOptions":{
    "ClaimsIdentityOptions": {
      "SecurityStampClaimType": "AVStack.Identity.SecurityStamp"
    },
    "PasswordOptions": {
      "RequiredLength": 6,
      "RequiredUniqueChars": 0,
      "RequireNonAlphanumeric": false,
      "RequireLowercase": false,
      "RequireUppercase": false,
      "RequireDigit": false
    },
    "LockoutOptions": {
      "AllowedForNewUsers": true,
      "MaxFailedAccessAttempts": 5,
      "DefaultLockoutTimeSpan": 300
    },
    "UserOptions": {
      "AllowedUserNameCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@+",
      "RequireUniqueEmail": true
    },
    "SignInOptions": {
      "RequireConfirmedEmail": true,
      "RequireConfirmedPhoneNumber": false,
      "RequireConfirmedAccount": false
    }
  },
  "IdentityServerOptions": {
    "UserInteraction": {
      "LoginUrl": "http://localhost:4200/account/sign-in",
      "LoginReturnUrlParameter": "",
      "LogoutUrl": "http://localhost:4200/account/sign-out",
      "LogoutIdParameter": "",
      "ConsentUrl": "http://localhost:4200/account/consent",
      "ConsentReturnUrlParameter": "",
      "ErrorUrl": "http://localhost:4200/account/error",
      "ErrorIdParameter": "",
      "CustomRedirectReturnUrlParameter": "",
      "CookieMessageThreshold": "",
      "DeviceVerificationUrl": "http://localhost:4200/account/device-verification",
      "DeviceVerificationUserCodeParameter": ""
    }
  }
}
